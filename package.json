{
  "name": "io-functions-commons",
  "version": "0.5.2",
  "description": "Common code for Azure functions",
  "repository": "https://github.com/teamdigitale/io-functions-commons",
  "author": "https://teamdigitale.governo.it",
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "scripts": {
    "prepare": "yarn build",
    "prebuild": "rimraf dist",
    "build": "yarn generate:definitions && tsc",
    "postversion": "git push && git push --tags",
    "test": "jest -i",
    "lint": "tslint --project .",
    "generate:definitions": "rimraf ./generated/definitions && mkdir -p ./generated/definitions && gen-api-models --api-spec ./openapi/index.yaml --out-dir ./generated/definitions"
  },
  "devDependencies": {
    "@azure/functions": "^1.0.3",
    "@types/documentdb": "^1.10.5",
    "@types/express": "^4.17.0",
    "@types/helmet": "^0.0.40",
    "@types/jest": "^24.0.13",
    "@types/node": "10.14.1",
    "@types/nodemailer": "^4.6.2",
    "@types/request-ip": "^0.0.33",
    "@types/superagent": "^3.8.1",
    "@types/winston": "^2.4.4",
    "danger": "^7.0.0",
    "danger-plugin-digitalcitizenship": "*",
    "italia-tslint-rules": "*",
    "italia-utils": "^4.0.1",
    "jest": "^24.8.0",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.1.0",
    "typescript": "^3.5.0"
  },
  "dependencies": {
    "applicationinsights": "^1.0.3",
    "azure-storage": "^2.10.3",
    "cidr-matcher": "^2.1.0",
    "documentdb": "^1.15.3",
    "helmet": "^3.13.0",
    "helmet-csp": "^2.5.1",
    "io-functions-express": "^0.1.1",
    "nodemailer": "^4.6.7",
    "referrer-policy": "^1.1.0",
    "rehype-stringify": "^3.0.0",
    "remark-parse": "^5.0.0",
    "remark-rehype": "^3.0.0",
    "request-ip": "^2.1.3",
    "superagent": "^3.8.3",
    "ulid": "^2.3.0",
    "unified": "^7.1.0",
    "winston": "^3.1.0"
  },
  "peerDependencies": {
    "@azure/functions": "^1.0.3",
    "express": "^4.0.0",
    "fp-ts": "1.12.0",
    "io-ts": "1.8.5",
    "italia-ts-commons": "^5.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node",
      "ts",
      "tsx"
    ],
    "preset": "ts-jest",
    "testMatch": null
  }
}
