{
  "name": "io-functions-commons",
  "version": "12.10.0",
  "description": "Common code for Azure functions",
  "repository": "https://github.com/pagopa/io-functions-commons",
  "author": "https://www.pagopa.gov.it",
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "scripts": {
    "prepare": "yarn build",
    "prebuild": "rimraf dist",
    "build": "yarn generate:definitions && tsc",
    "postversion": "git push && git push --tags",
    "test": "jest -i",
    "lint": "tslint --project .",
    "generate:definitions": "rimraf ./generated/definitions && shx mkdir -p ./generated/definitions && gen-api-models --api-spec ./openapi/index.yaml --out-dir ./generated/definitions"
  },
  "devDependencies": {
    "@azure/functions": "^1.0.3",
    "@types/express": "^4.17.0",
    "@types/helmet": "^0.0.40",
    "@types/jest": "^24.0.13",
    "@types/node": "10.14.1",
    "@types/nodemailer": "^4.6.2",
    "@types/request-ip": "^0.0.33",
    "@types/winston": "^2.4.4",
    "danger": "^7.0.0",
    "danger-plugin-digitalcitizenship": "*",
    "italia-tslint-rules": "*",
    "italia-utils": "^4.0.1",
    "jest": "^24.8.0",
    "prettier": "^1.14.3",
    "release-it": "^13.1.1",
    "rimraf": "^2.6.2",
    "shx": "^0.3.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.11.0",
    "typescript": "^3.8.0"
  },
  "dependencies": {
    "@azure/cosmos": "^3.7.2",
    "@types/node-fetch": "^2.5.6",
    "applicationinsights": "^1.7.3",
    "azure-storage": "^2.10.3",
    "cidr-matcher": "^2.1.0",
    "fp-ts": "1.17.4",
    "helmet": "^3.13.0",
    "helmet-csp": "^2.5.1",
    "io-functions-express": "^0.1.1",
    "io-ts": "1.8.5",
    "italia-ts-commons": "^7.0.1",
    "node-fetch": "^2.6.0",
    "nodemailer": "^4.6.7",
    "referrer-policy": "^1.1.0",
    "rehype-stringify": "^3.0.0",
    "remark-frontmatter": "^2.0.0",
    "remark-parse": "^5.0.0",
    "remark-rehype": "^3.0.0",
    "request-ip": "^2.1.3",
    "ulid": "^2.3.0",
    "unified": "^9.0.0",
    "winston": "^3.1.0"
  },
  "peerDependencies": {
    "@azure/functions": "^1.0.3",
    "express": "^4.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node",
      "ts",
      "tsx"
    ],
    "preset": "ts-jest",
    "testMatch": null
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "resolutions": {
    "fp-ts": "1.17.4"
  }
}
